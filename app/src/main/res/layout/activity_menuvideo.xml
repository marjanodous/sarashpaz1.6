<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layoutDirection="rtl"
    tools:context=".Menuvideo">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layoutDirection="rtl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/video_backhome"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@id/video_backhome"
                android:textColor="@color/colorText"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_video">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true"
                android:orientation="vertical"
                android:columnCount="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/ltsonati_video"
                    android:background="@color/colorText">
                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:id="@+id/video1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amuzesh"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/ltmodern_video"
                    android:background="@color/colorText">
                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:id="@+id/video2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tarfand"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/ltsoup_video"
                    android:background="@color/colorText">
                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:id="@+id/video3"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/myanvade_koodak"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"/>
                </RelativeLayout>



            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>